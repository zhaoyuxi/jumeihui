<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBottomNavigationBarBackground"
    android:orientation="horizontal"
    android:alignParentBottom="true">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivIconHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_tabbar_selector" />

        <TextView
            android:id="@+id/tvTextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconHome"
            android:layout_centerHorizontal="true"
            android:text="主页"
            android:textColor="@color/naviTabUnselectedText"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvBadgeHome"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/ivIconHome"
            android:background="@color/naviTabSelectedText"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivIconPicture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/picture_tabbar_selector" />

        <TextView
            android:id="@+id/tvTextPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconPicture"
            android:layout_centerHorizontal="true"
            android:text="图册"
            android:textColor="@color/naviTabUnselectedText"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvBadgePicture"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/ivIconPicture"
            android:background="@color/naviTabSelectedText"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivIconPublish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/publish_tabbar_selector" />

        <TextView
            android:id="@+id/tvTextPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconPublish"
            android:layout_centerHorizontal="true"
            android:text="发布"
            android:textColor="@color/naviTabUnselectedText"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvBadgePublish"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/ivIconPublish"
            android:background="@color/naviTabSelectedText"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivIconVideo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/video_tabbar_selector" />

        <TextView
            android:id="@+id/tvTextVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconVideo"
            android:layout_centerHorizontal="true"
            android:text="视频"
            android:textColor="@color/naviTabUnselectedText"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvBadgeVideo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/ivIconVideo"
            android:background="@color/naviTabSelectedText"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivIconMine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mine_tabbar_selector" />

        <TextView
            android:id="@+id/tvTextMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconMine"
            android:layout_centerHorizontal="true"
            android:text="视频"
            android:textColor="@color/naviTabUnselectedText"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvBadgeMine"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/ivIconMine"
            android:background="@color/naviTabSelectedText"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
